{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}
<h3>Editar categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="POST" enctype="multipart/form-data">

        <input type="hidden" name="id" value="{{categoria._id}}" >

            <label for="nome">Nome:</label>
            <input class="form-control" type="text" id="nome" name="nome" value="{{categoria.nome}}"  placeholder="Nome da categoria">

            <label for="icone">Icone:</label>
            <input class="form-control" type="file" id="icone" name="icone" value="{{categoria.icone}}"  placeholder="Slug da categoria" accept="image/*">

            <label for="slug">Slug:</label>
            <input class="form-control" type="text" id="slug" name="slug" value="{{categoria.slug}}"  placeholder="Slug da categoria">

                <br>
            <button type="submit" class="btn btn-azul">Editar categoria</button>
        </form>
    </div>
</div>  